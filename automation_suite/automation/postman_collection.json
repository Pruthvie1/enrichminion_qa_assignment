{
  "info": {
    "name": "EnrichMinion API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup - valid",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"QA User\", \"email\": \"qa+automation@example.com\", \"password\": \"TestPwd123!\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signup",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "signup"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200 or 201', function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([200,201]);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Login - valid",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"qa+automation@example.com\", \"password\": \"TestPwd123!\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Response has token', function () { pm.expect(pm.response.json().token).to.exist; });"
            ]
          }
        }
      ]
    },
    {
      "name": "Providers - list",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/auth/providers",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "providers"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Has providers object', function () { pm.expect(pm.response.json().providers).to.be.an('object'); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"qa+automation@example.com\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/forgot-password",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "forgot-password"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200 or 202', function () { pm.expect(pm.response.code).to.be.oneOf([200,202]); });"
            ]
          }
        }
      ]
    }
  ]
}